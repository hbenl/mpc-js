{
  "name": "mpc-js",
  "version": "2.1.0",
  "description": "A javascript client library for the Music Player Daemon",
  "keywords": [
    "mpd"
  ],
  "homepage": "https://github.com/hbenl/mpc-js#readme",
  "bugs": {
    "url": "https://github.com/hbenl/mpc-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hbenl/mpc-js.git"
  },
  "license": "MIT",
  "author": "Holger Benl <hbenl@evandor.de>",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    "browser": {
      "types": "./dist/mpc.d.ts",
      "script": "./dist/mpc.umd.min.js",
      "require": "./dist/mpc.cjs",
      "default": "./dist/mpc.mjs"
    },
    "default": {
      "types": "./dist/mpc-node.d.ts",
      "require": "./dist/mpc-node.cjs",
      "default": "./dist/mpc-node.mjs"
    }
  },
  "main": "./dist/mpc-node.cjs",
  "types": "./dist/mpc-node.d.ts",
  "browser": "./dist/mpc.cjs",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run bundle",
    "clean": "rimraf out dist",
    "compile": "tsc",
    "bundle": "rollup -c rollup.config.js",
    "watch": "tsc -w",
    "build-docs": "rimraf ../mpc-js-doc/typedoc && typedoc"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.3.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  }
}
